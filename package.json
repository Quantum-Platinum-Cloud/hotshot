{
  "name": "hotshot",
  "version": "1.0.3",
  "description": "A teeny tiny keyboard shortcuts library",
  "main": "build/hotshot.min.js",
  "repository": {
    "type": "git",
    "url": "git@github.com:Shopify/hotshot.git"
  },
  "bugs": {
    "url": "https://github.com/Shopify/hotshot/issues"
  },
  "homepage": "https://github.com/Shopify/hotshot",
  "keywords": [
    "keyboard",
    "shortcuts",
    "hotkeys",
    "es2015"
  ],
  "files": [
    "build"
  ],
  "scripts": {
    "build": "npm run build:rollup && npm run build:babel && npm run build:uglify",
    "build:rollup": "rollup src/index.js -o build/hotshot.js",
    "build:babel": "babel --presets es2015 build/hotshot.js -o build/hotshot.js",
    "build:uglify": "uglifyjs build/hotshot.js -o build/hotshot.min.js -c -m",
    "watch": "watch -p \"src/**/*.js\" -c \"npm run build && cp build/hotshot.js tests/libs/hotshot.js\"",
    "serve-test": "ws -p 9000 -d tests",
    "test": "karma start"
  },
  "author": "Shopify Inc",
  "license": "MIT",
  "devDependencies": {
    "babel-cli": "^6.14.0",
    "babel-preset-es2015": "^6.14.0",
    "chai": "^3.5.0",
    "karma": "^1.3.0",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^2.0.0",
    "karma-firefox-launcher": "^1.0.0",
    "karma-mocha": "^1.2.0",
    "karma-sinon": "^1.0.5",
    "local-web-server": "^1.2.6",
    "mocha": "^3.1.0",
    "rollup": "^0.36.3",
    "sinon": "^1.17.6",
    "uglify-js": "^2.7.3",
    "watch-cli": "^0.2.1"
  }
}
