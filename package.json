{
  "name": "Hotshot",
  "version": "1.0.0",
  "private": true,
  "description": "A teeny tiny keyboard shortcuts library",
  "main": "index.js",
  "scripts": {
    "build": "npm run test && npm run babel && npm run uglify",
    "babel": "babel --presets es2015 src/Hotshot.js -o dist/Hotshot.js",
    "uglify": "uglifyjs dist/Hotshot.js -o dist/Hotshot.min.js -c -m",
    "test": "karma start"
  },
  "author": "Koen Vendrik <k.vendrik@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "babel-cli": "^6.14.0",
    "babel-preset-es2015": "^6.14.0",
    "chai": "^3.5.0",
    "karma": "^1.3.0",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^2.0.0",
    "karma-mocha": "^1.2.0",
    "mocha": "^3.1.0",
    "uglify-js": "^2.7.3"
  }
}
